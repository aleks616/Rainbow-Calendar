<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/home_button_name"
        android:textSize="50sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="200dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <Button
                android:layout_marginTop="300dp"
                android:id="@+id/testButton"
                android:layout_width="150sp"
                android:layout_height="70sp"
                android:layout_marginStart="30sp"
                android:background="@color/royal_blue"
                android:text="test button 1\ngo to password activity"
                android:textAllCaps="false"
                tools:ignore="HardcodedText" />

            <Button
                android:layout_marginTop="100dp"
                android:id="@+id/testButton3"
                android:layout_width="150sp"
                android:layout_height="70sp"
                android:layout_marginStart="30sp"
                android:background="@color/royal_blue"
                android:text="test button 3\ngo to recovery activity"
                android:textAllCaps="false"
                tools:ignore="HardcodedText" />

        </LinearLayout>


        <Button
            android:id="@+id/testButton2"
            android:layout_width="150sp"
            android:layout_height="70sp"
            android:layout_gravity="center"
            android:layout_marginStart="30sp"
            android:background="@color/royal_blue"
            android:gravity="center"
            android:text="test button 2\nreset password"
            android:textAllCaps="false"
            tools:ignore="HardcodedText" />


    </LinearLayout>

</FrameLayout>